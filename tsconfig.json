{
  "compilerOptions": {
    "target": "ES2020",                     // Moderno, compatible con Node 14+
    "module": "ESNext",                     // M칩dulos ES para Node.js
    "moduleResolution": "node",             // Resolver m칩dulos estilo Node
    "outDir": "./dist",                      // Carpeta destino compilado
    "rootDir": "./src",                      // Carpeta fuente
    "strict": true,                         // M치s chequeos estrictos
    "esModuleInterop": true,                // Para interoperar con CommonJS
    "allowSyntheticDefaultImports": true,  // Importaciones por defecto m치s flexibles
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
